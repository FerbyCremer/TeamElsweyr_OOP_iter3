<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ViewControllers.MenuController"
            prefHeight="720.0" prefWidth="1080.0" fx:id="base" stylesheets="@css/menus.css">
    <top>
        <HBox alignment="CENTER" spacing="12">
            <Label text="The Mewrchants of Vemice"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="21">
            <Button id="#Btn" fx:id="newGame" text="New Game" onAction="#startNewGame"/>
            <Button id="#Btn" fx:id="loadGame" text="Load Game" onAction="#loadGame"/>
            <Button id="#Btn" fx:id="config" text="Configure Controls" onAction="#keyConfig"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="BASELINE_CENTER" spacing="12">
            <Button id="#Btn" text="Exit" onAction="#exit"/>
        </HBox>
    </bottom>

</BorderPane>
