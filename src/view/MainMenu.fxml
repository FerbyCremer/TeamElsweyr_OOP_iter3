<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ViewControllers.MenuController"
            prefHeight="720.0" prefWidth="1080.0" fx:id="base">
    <top>
        <Label value="The Mewrchants of Vemice"  id="menuTitle" />
    </top>

    <center>
        <VBox>
            <Button id="menuBtn" fx:id="newGame" value="New Game" onAction="#startNewGame"/>
            <Button id="menuBtn" fx:id="loadGame" value="Load Game" onAction="#loadGame"/>
            <Button id="menuBtn" fx:id="config" value="COnfigure Controls" onAction="#keyConfig"/>
        </VBox>
    </center>

    <bottom>
        <Button  id="menuBtn" value="Exit" onAction="#exit"/>
    </bottom>

</BorderPane>
